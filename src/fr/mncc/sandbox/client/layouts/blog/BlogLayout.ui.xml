<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <!-- Access to texts, images and styles -->
    <ui:with field='res' type="fr.mncc.sandbox.client.assets.SandboxResourceBundle"/>

    <!-- Access to constants -->
    <ui:with field='cons' type="fr.mncc.sandbox.client.assets.SandboxConstants"/>

    <g:HTMLPanel addStyleNames="{res.blogLayoutCssResource.pure_g}">
        <div class="{res.blogLayoutCssResource.sidebar} {res.blogLayoutCssResource.pure_u_1} {res.blogLayoutCssResource.pure_u_md_1_4}">
            <div class="{res.blogLayoutCssResource.header}">
                <h1 class="{res.blogLayoutCssResource.brand_title}">A Sample Blog</h1>
                <h2 class="{res.blogLayoutCssResource.brand_tagline}">Creating a blog layout using
                    Pure
                </h2>

                <nav class="nav">
                    <ul class="{res.blogLayoutCssResource.nav_list}">
                        <li class="{res.blogLayoutCssResource.nav_item}">
                            <a class="{res.blogLayoutCssResource.pure_button}"
                               href="http://purecss.io">Pure
                            </a>
                        </li>
                        <li class="{res.blogLayoutCssResource.nav_item}">
                            <a class="{res.blogLayoutCssResource.pure_button}"
                               href="http://yuilibrary.com">YUI Library
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="{res.blogLayoutCssResource.content} {res.blogLayoutCssResource.pure_u_1} {res.blogLayoutCssResource.pure_u_md_3_4}">
            <div>
                <!-- A wrapper for all the blog posts -->
                <div class="posts">
                    <h1 class="{res.blogLayoutCssResource.content_subhead}">Pinned Post</h1>

                    <!-- A single blog post -->
                    <section class="{res.blogLayoutCssResource.post}">
                        <header class="post-header">
                            <img class="{res.blogLayoutCssResource.post_avatar}"
                                 alt="Tilo Mitra&#x27;s avatar" height="48" width="48"
                                 src="{res.tiloAvatar.getSafeUri}"/>
                            <h2 class="{res.blogLayoutCssResource.post_title}">Introducing Pure</h2>
                            <p class="{res.blogLayoutCssResource.post_meta}">
                                By
                                <a href="#" class="post-author">Tilo Mitra</a>
                                under
                                <a class="{res.blogLayoutCssResource.post_category} {res.blogLayoutCssResource.post_category_design}"
                                   href="#">CSS
                                </a>
                                <a class="{res.blogLayoutCssResource.post_category} {res.blogLayoutCssResource.post_category_pure}"
                                   href="#">Pure
                                </a>
                            </p>
                        </header>
                        <div class="{res.blogLayoutCssResource.post_description}">
                            <p>
                                Yesterday at CSSConf, we launched Pure – a new CSS library. Phew!
                                Here are the<a href="https://speakerdeck.com/tilomitra/pure-bliss">
                                slides from the presentation</a>. Although it looks pretty
                                minimalist, we’ve been working on Pure for several months. After
                                many iterations, we have released Pure as a set of small,
                                responsive, CSS modules that you can use in every web project.
                            </p>
                        </div>
                    </section>
                </div>

                <div class="posts">
                    <h1 class="{res.blogLayoutCssResource.content_subhead}">Recent Posts</h1>
                    <section class="{res.blogLayoutCssResource.post}">
                        <header class="post-header">
                            <img class="{res.blogLayoutCssResource.post_avatar}"
                                 alt="Eric Ferraiuolo&#x27;s avatar" height="48" width="48"
                                 src="{res.ericfAvatar.getSafeUri}"/>
                            <h2 class="{res.blogLayoutCssResource.post_title}">Everything You Need
                                to Know About Grunt
                            </h2>
                            <p class="{res.blogLayoutCssResource.post_meta}">
                                By
                                <a class="post-author" href="#">Eric Ferraiuolo</a>
                                under
                                <a class="{res.blogLayoutCssResource.post_category} {res.blogLayoutCssResource.post_category_js}"
                                   href="#">JavaScript
                                </a>
                            </p>
                        </header>
                        <div class="{res.blogLayoutCssResource.post_description}">
                            <p>
                                <ui:text from="{cons.loremIpsumLong}"/>
                            </p>
                        </div>
                    </section>

                    <section class="{res.blogLayoutCssResource.post}">
                        <header class="post-header">
                            <img class="{res.blogLayoutCssResource.post_avatar}"
                                 alt="Reid Burke&#x27;s avatar" height="48" width="48"
                                 src="{res.reidAvatar.getSafeUri}"/>
                            <h2 class="{res.blogLayoutCssResource.post_title}">Photos from CSSConf
                                and JSConf
                            </h2>
                            <p class="{res.blogLayoutCssResource.post_meta}">
                                By
                                <a class="post-author" href="#">Reid Burke</a>
                                under
                                <a class="{res.blogLayoutCssResource.post_category}" href="#">
                                    Uncategorized
                                </a>
                            </p>
                        </header>

                        <div class="{res.blogLayoutCssResource.post_description}">
                            <div class="{res.blogLayoutCssResource.post_images} {res.blogLayoutCssResource.pure_g}">
                                <div class="{res.blogLayoutCssResource.pure_u_1} {res.blogLayoutCssResource.pure_u_md_1_2}">
                                    <a href="http://www.flickr.com/photos/uberlife/8915936174/">
                                        <img alt="Photo of someone working poolside at a resort"
                                             class="{res.blogLayoutCssResource.pure_img_responsive}"
                                             src="{res.img5.getSafeUri}"/>
                                    </a>
                                    <div class="{res.blogLayoutCssResource.post_image_meta}">
                                        <h3>CSSConf Photos</h3>
                                    </div>
                                </div>

                                <div class="{res.blogLayoutCssResource.pure_u_1} {res.blogLayoutCssResource.pure_u_md_1_2}">
                                    <a href="http://www.flickr.com/photos/uberlife/8907351301/">
                                        <img alt="Photo of the sunset on the beach"
                                             class="{res.blogLayoutCssResource.pure_img_responsive}"
                                             src="{res.img6.getSafeUri}"/>
                                    </a>
                                    <div class="{res.blogLayoutCssResource.post_image_meta}">
                                        <h3>JSConf Photos</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="{res.blogLayoutCssResource.post}">
                        <header class="post-header">
                            <img class="{res.blogLayoutCssResource.post_avatar}"
                                 alt="Andrew Wooldridge&#x27;s avatar" height="48" width="48"
                                 src="{res.andrewAvatar.getSafeUri}"/>
                            <h2 class="{res.blogLayoutCssResource.post_title}">YUI 3.10.2 Released
                            </h2>
                            <p class="{res.blogLayoutCssResource.post_meta}">
                                By
                                <a class="post-author" href="#">Andrew Wooldridge</a>
                                under
                                <a class="{res.blogLayoutCssResource.post_category} {res.blogLayoutCssResource.post_category_yui}"
                                   href="#">YUI
                                </a>
                            </p>
                        </header>
                        <div class="{res.blogLayoutCssResource.post_description}">
                            <p>
                                We are happy to announce the release of YUI 3.10.2! You can find it
                                now on the Yahoo! CDN, download it directly, or pull it in via npm.
                                We’ve also updated the YUI Library website with the latest
                                documentation.
                            </p>
                        </div>
                    </section>
                </div>

                <div class="{res.blogLayoutCssResource.footer}">
                    <div class="{res.blogLayoutCssResource.pure_menu} {res.blogLayoutCssResource.pure_menu_horizontal} {res.blogLayoutCssResource.pure_menu_open}">
                        <ul>
                            <li>
                                <a href="http://purecss.io/">
                                    <ui:text from="{cons.about}"/>
                                </a>
                            </li>
                            <li>
                                <a href="http://twitter.com/yuilibrary/">
                                    <ui:text from="{cons.twitter}"/>
                                </a>
                            </li>
                            <li>
                                <a href="http://github.com/yahoo/pure/">
                                    <ui:text from="{cons.github}"/>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
