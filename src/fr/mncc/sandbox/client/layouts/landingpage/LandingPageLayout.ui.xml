<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <!-- Access to texts, images and styles -->
    <ui:with field='res' type="fr.mncc.sandbox.client.assets.SandboxResourceBundle" />

    <!-- Access to constants -->
    <ui:with field='cons' type="fr.mncc.sandbox.client.assets.SandboxConstants" />

    <g:HTMLPanel>
        <div>
            <div class="{res.landingPageLayoutCssResource.home_menu} {res.landingPageLayoutCssResource.pure_menu} {res.landingPageLayoutCssResource.pure_menu_open} {res.landingPageLayoutCssResource.pure_menu_horizontal} {res.landingPageLayoutCssResource.pure_menu_fixed}">
                <a class="{res.landingPageLayoutCssResource.pure_menu_heading}" href=""><ui:text from="{cons.yourSite}"/></a>
                <ul>
                    <li class="{res.landingPageLayoutCssResource.pure_menu_selected}"><a href="#!/landingpage"><ui:text from="{cons.home}"/></a></li>
                    <li><a href="#!/sidemenu"><ui:text from="{cons.sideMenu}"/></a></li>
                    <li><a href="#!/blog"><ui:text from="{cons.blog}"/></a></li>
                </ul>
            </div>
        </div>

        <div class="{res.landingPageLayoutCssResource.splash_container}">
            <div class="{res.landingPageLayoutCssResource.splash}">
                <h1 class="{res.landingPageLayoutCssResource.splash_head}"><ui:text from="{cons.bigBoldText}"/></h1>
                <p class="{res.landingPageLayoutCssResource.splash_subhead}">
                    <ui:text from="{cons.loremIpsumShort}"/>
                </p>
                <p>
                    <a href="http://purecss.io" class="{res.landingPageLayoutCssResource.pure_button} {res.landingPageLayoutCssResource.pure_button_primary}"><ui:text from="{cons.getStarted}"/></a>
                </p>
            </div>
        </div>

        <div class="{res.landingPageLayoutCssResource.content_wrapper}">
            <div class="{res.landingPageLayoutCssResource.content}">
                <h2 class="{res.landingPageLayoutCssResource.content_head} {res.landingPageLayoutCssResource.is_center}"><ui:text from="{cons.excepteurSintOccaecat}"/></h2>
                <div class="{res.landingPageLayoutCssResource.pure_g}">
                    <div class="{res.landingPageLayoutCssResource.l_box} {res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_1_2} {res.landingPageLayoutCssResource.pure_u_lg_1_4}">
                        <h3 class="{res.landingPageLayoutCssResource.content_subhead}">
                            <i class="fa fa-rocket"></i>
                            <ui:text from="{cons.getStartedQuickly}"/>
                        </h3>
                        <p>
                            <ui:text from="{cons.phaellusEgetEnim}"/>
                        </p>
                    </div>
                    <div class="{res.landingPageLayoutCssResource.l_box} {res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_1_2} {res.landingPageLayoutCssResource.pure_u_lg_1_4}">
                        <h3 class="{res.landingPageLayoutCssResource.content_subhead}">
                            <i class="fa fa-mobile"></i>
                            <ui:text from="{cons.responsiveLayouts}"/>
                        </h3>
                        <p>
                            <ui:text from="{cons.phaellusEgetEnim}"/>
                        </p>
                    </div>
                    <div class="{res.landingPageLayoutCssResource.l_box} {res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_1_2} {res.landingPageLayoutCssResource.pure_u_lg_1_4}">
                        <h3 class="{res.landingPageLayoutCssResource.content_subhead}">
                            <i class="fa fa-th-large"></i>
                            <ui:text from="{cons.modular}"/>
                        </h3>
                        <p>
                            <ui:text from="{cons.phaellusEgetEnim}"/>
                        </p>
                    </div>
                    <div class="{res.landingPageLayoutCssResource.l_box} {res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_1_2} {res.landingPageLayoutCssResource.pure_u_lg_1_4}">
                        <h3 class="{res.landingPageLayoutCssResource.content_subhead}">
                            <i class="fa fa-check-square-o"></i>
                            <ui:text from="{cons.playsNice}"/>
                        </h3>
                        <p>
                            <ui:text from="{cons.phaellusEgetEnim}"/>
                        </p>
                    </div>
                </div>
            </div>

            <div class="{res.landingPageLayoutCssResource.ribbon} {res.landingPageLayoutCssResource.l_box_lrg} {res.landingPageLayoutCssResource.pure_g}">
                <div class="{res.landingPageLayoutCssResource.l_box_lrg} {res.landingPageLayoutCssResource.is_center} {res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_1_2} {res.landingPageLayoutCssResource.pure_u_lg_2_5}">
                    <img class="{res.landingPageLayoutCssResource.pure_img_responsive}" alt="File Icons" width="300" src="{res.fileIcons.getSafeUri}" />
                </div>
                <div class="{res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_1_2} {res.landingPageLayoutCssResource.pure_u_lg_3_5}">
                    <h2 class="{res.landingPageLayoutCssResource.content_head} {res.landingPageLayoutCssResource.content_head_ribbon}"><ui:text from="{cons.laborisNisiUt}"/></h2>
                    <p>
                        <ui:text from="{cons.loremIpsumLong}"/>
                    </p>
                </div>
            </div>

            <div class="{res.landingPageLayoutCssResource.content}">
                <h2 class="{res.landingPageLayoutCssResource.content_head} {res.landingPageLayoutCssResource.is_center}"><ui:text from="{cons.doloreMagnaAliqua}"/></h2>

                <div class="{res.landingPageLayoutCssResource.pure_g}">
                    <div class="{res.landingPageLayoutCssResource.l_box_lrg} {res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_2_5}">
                        <form class="{res.landingPageLayoutCssResource.pure_form} {res.landingPageLayoutCssResource.pure_form_stacked}">
                            <fieldset>
                                <label for="name"><ui:text from="{cons.yourName}"/></label>
                                <input id="name" type="text" placeholder="{cons.yourName}"/>


                                <label for="email"><ui:text from="{cons.yourEmail}"/></label>
                                <input id="email" type="email" placeholder="{cons.yourEmail}"/>

                                <label for="password"><ui:text from="{cons.yourPassword}"/></label>
                                <input id="password" type="password" placeholder="{cons.yourPassword}"/>

                                <button type="submit" class="{res.landingPageLayoutCssResource.pure_button}"><ui:text from="{cons.signUp}"/></button>
                            </fieldset>
                        </form>
                    </div>

                    <div class="{res.landingPageLayoutCssResource.l_box_lrg} {res.landingPageLayoutCssResource.pure_u_1} {res.landingPageLayoutCssResource.pure_u_md_3_5}">
                        <h4><ui:text from="{cons.contactUs}"/></h4>
                        <p>
                            <ui:text from="{cons.loremIpsumLong}"/>
                        </p>
                        <h4><ui:text from="{cons.moreInformation}"/></h4>
                        <p>
                            <ui:text from="{cons.loremIpsumLong}"/>
                        </p>
                    </div>
                </div>
            </div>

            <div class="{res.landingPageLayoutCssResource.footer} {res.landingPageLayoutCssResource.l_box} {res.landingPageLayoutCssResource.is_center}">
                <ui:text from="{cons.viewTheSource}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
