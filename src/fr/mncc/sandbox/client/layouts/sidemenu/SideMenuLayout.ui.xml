<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <!-- Access to texts, images and styles -->
    <ui:with field='res' type="fr.mncc.sandbox.client.assets.SandboxResourceBundle" />

    <!-- Access to constants -->
    <ui:with field='cons' type="fr.mncc.sandbox.client.assets.SandboxConstants" />

    <g:HTMLPanel ui:field="layout" addStyleNames="{res.sideMenuLayoutCss.app_layout}">

        <!-- Menu toggle -->
        <a href="#menu" ui:field="menuLink" class="{res.sideMenuLayoutCss.menu_link}">
            <!-- Hamburger icon -->
            <span></span>
        </a>

        <div ui:field="menu" class="{res.sideMenuLayoutCss.app_menu}">
            <div class="{res.sideMenuLayoutCss.pure_menu} {res.sideMenuLayoutCss.pure_menu_open}">
                <a class="{res.sideMenuLayoutCss.pure_menu_heading}" href="#"><ui:text from="{cons.menuCompany}"/></a>
                <ul>
                    <li><a href="#"><ui:text from="{cons.menuHome}"/></a></li>
                    <li><a href="#"><ui:text from="{cons.menuAbout}"/></a></li>
                    <li class="{res.sideMenuLayoutCss.menu_item_divided} {res.sideMenuLayoutCss.pure_menu_selected}">
                        <a href="#"><ui:text from="{cons.menuServices}"/></a>
                    </li>
                    <li><a href="#"><ui:text from="{cons.menuContact}"/></a></li>
                </ul>
            </div>
        </div>

        <div ui:field="main">
            <div class="{res.sideMenuLayoutCss.header}">
                <h1><ui:text from="{cons.pageTitle}"/></h1>
                <h2><ui:text from="{cons.pageSubtitle}"/></h2>
            </div>

            <div class="{res.sideMenuLayoutCss.content}">
                <h2 class="{res.sideMenuLayoutCss.content_subhead}"><ui:text from="{cons.howToUseThisLayout}"/></h2>
                <p>
                    <ui:text from="{cons.instructions}"/>
                </p>

                <h2 class="{res.sideMenuLayoutCss.content_subhead}"><ui:text from="{cons.nowLetsSpeakSomeLatin}"/></h2>
                <p>
                    <ui:text from="{cons.loremIpsum}"/>
                </p>

                <div class="{res.sideMenuLayoutCss.pure_g}">
                    <div class="{res.sideMenuLayoutCss.pure_u_1_4}">
                        <img class="{res.sideMenuLayoutCss.pure_img_responsive}" src="{res.img1.getSafeUri}" alt="Peyto Lake" />
                    </div>
                    <div class="{res.sideMenuLayoutCss.pure_u_1_4}">
                        <img class="{res.sideMenuLayoutCss.pure_img_responsive}" src="{res.img2.getSafeUri}" alt="Train" />
                    </div>
                    <div class="{res.sideMenuLayoutCss.pure_u_1_4}">
                        <img class="{res.sideMenuLayoutCss.pure_img_responsive}" src="{res.img4.getSafeUri}" alt="T-Shirt Store" />
                    </div>
                    <div class="{res.sideMenuLayoutCss.pure_u_1_4}">
                        <img class="{res.sideMenuLayoutCss.pure_img_responsive}" src="{res.img3.getSafeUri}" alt="Mountain" />
                    </div>
                </div>

                <h2 class="{res.sideMenuLayoutCss.content_subhead}"><ui:text from="{cons.tryResizingYourBrowser}"/></h2>
                <p>
                    <ui:text from="{cons.loremIpsum}"/>
                </p>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
