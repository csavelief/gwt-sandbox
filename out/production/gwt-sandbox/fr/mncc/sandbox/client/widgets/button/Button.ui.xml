<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="fr"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <!-- Access to texts, images and styles -->
    <ui:with field='res' type="fr.mncc.sandbox.client.assets.AppResourceBundle" />

    <!-- Access to constants -->
    <ui:with field='cons' type="fr.mncc.sandbox.client.assets.AppConstants" />

    <!-- Custom styles -->
    <ui:style field='css' type="fr.mncc.sandbox.client.widgets.button.ButtonStyles">

    </ui:style>
    <g:HTMLPanel>
        <button ui:field="button" class="pure-button">
            <ui:text from="{cons.helloWorld}" />
        </button>
    </g:HTMLPanel>
</ui:UiBinder>