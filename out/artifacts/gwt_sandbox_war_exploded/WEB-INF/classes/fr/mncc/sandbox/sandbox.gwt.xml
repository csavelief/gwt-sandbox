<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/releases/2.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="sandbox">

    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.google.gwt.i18n.I18N"/>
    <inherits name="com.google.gwt.resources.Resources" />

    <!-- Inherit the core MNCC toolkit stuff. -->
    <inherits name="fr.mncc.gwttoolbox.purecssframework.purecssframework"/>
    <inherits name="fr.mncc.gwttoolbox.router.router"/>

    <!-- Enable Gss with CssResource -->
    <set-configuration-property name="CssResource.enableGss" value="true" />
    <set-configuration-property name="CssResource.legacy" value="true" />
    <set-configuration-property name="CssResource.conversionMode" value="strict" />

    <!-- Languages -->
    <extend-property name="locale" values="en,fr"/>

    <!-- Only compile safari permutation -->
    <set-property name="user.agent" value="safari"/>

    <!-- Specify the app entry point class. -->
    <entry-point class='fr.mncc.sandbox.client.sandbox'/>

    <!-- For local work, use Super Dev Mode -->
    <!--<set-configuration-property name="devModeRedirectEnabled" value="true"/>-->
    <!--<set-property name="compiler.useSourceMaps" value="true" />-->
</module>
